<Application x:Class="TileManiac.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TileManiac"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:SkinResourceDictonary LightSource="/TileManiac;component/Themes/LightTheme.xaml" DarkSource="/TileManiac;component/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/ContextMenu.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/ManiacResources.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/Toolbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
