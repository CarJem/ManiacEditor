<UserControl x:Class="TileManiac.HScrollBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:maniac="clr-namespace:TileManiac"
             mc:Ignorable="d">
    <ScrollBar x:Name="scroller" Height="15" Orientation="Horizontal" Margin="0,0,0,0"/>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <maniac:SkinResourceDictonary LightSource="/TileManiac;component/Themes/LightTheme.xaml" DarkSource="/TileManiac;component/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/ContextMenu.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/ManiacResources.xaml"/>
                <ResourceDictionary Source="/TileManiac;component/Templates/Toolbar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
</UserControl>
