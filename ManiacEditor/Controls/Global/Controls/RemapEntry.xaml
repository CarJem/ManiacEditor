<UserControl x:Class="ManiacEditor.Controls.Global.Controls.RemapEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManiacEditor.Controls.Global.Controls"
             mc:Ignorable="d" MinHeight="30" MaxHeight="30"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BindingButton" Width="100" Click="Button_Click" Visibility="Visible" Tag="NULL"></Button>
            <TextBlock x:Name="HeaderText" Margin="10,0,0,0" VerticalAlignment="Center" Visibility="Visible" Foreground="{DynamicResource NormalText}" Text="{Binding Path=HeaderName}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
