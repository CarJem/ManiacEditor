<Window x:Class="ManiacEditor.Controls.Updater.ManiacUpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:maniac="clr-namespace:ManiacEditor"
        xmlns:update="clr-namespace:ManiacEditor.Controls.Updater"
        mc:Ignorable="d"
        Title="Updates" Height="192" Width="515" Background="{DynamicResource NormalBackground}" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <update:ManiacUpdater VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></update:ManiacUpdater>
    <Window.Resources>
        <Style TargetType="{x:Type Label}">
                <Setter Property="Foreground" Value="{DynamicResource NormalText}" />
            </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource NormalText}" />
        </Style>
    </Window.Resources>
</Window>
