<Window x:Class="ManiacEditor.Controls.Toolbox.OffsetTilesTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManiacEditor.Controls.Toolbox"
        xmlns:wpfTool="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="" Height="150" Width="250" Background="{DynamicResource NormalBackground}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Offset Tile Indexes">
            <Grid>
                <StackPanel Margin="5">
                    <TextBlock Text="Offset Amount:"></TextBlock>
                    <wpfTool:IntegerUpDown x:Name="IndexOffsetValue" Value="0"></wpfTool:IntegerUpDown>
                </StackPanel>
                <Button Click="Button_Click" Grid.Column="2" Grid.Row="1" Width="75" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">GO!</Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
