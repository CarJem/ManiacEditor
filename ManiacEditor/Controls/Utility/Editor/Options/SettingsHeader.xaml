<UserControl x:Class="ManiacEditor.Controls.Utility.Editor.Options.SettingsHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManiacEditor"
             mc:Ignorable="d">
    <DockPanel Name="Source">
        <TextBlock FontWeight="Bold" Text="{Binding Path=HeaderName}" Foreground="{DynamicResource NormalText}"></TextBlock>
        <Border BorderThickness="1" Height="5" Width="Auto" Margin="5,0" Background="{DynamicResource NormalText}" HorizontalAlignment="Stretch"></Border>
    </DockPanel>
</UserControl>
